<!DOCTYPE html>
<html>
<head>
	<title>
		
	</title>
</head>
<body>




<h1>Listing Treatments</h1>

<table>
  <thead>
    <tr>
      <th>Patient Name</th>
      <th>Aadharnumber</th>
      <th>Age</th>
      <th>Weight</th>
      <th>Phonenumber</th>
      <th>Gender</th>
      <th>Desciption</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @treatments.each do |treatment| %>
      <tr>
      	<% patient=@patients.find_by_id(treatment.patient_id)  %>
        <td> <%=patient.name %>
        <td><%= patient.aadharnumber %></td>
        <td><%= patient.age %></td>
        <td><%= patient.weight %></td>
        <td><%= patient.phonenumber %></td>
        <td><%= patient.gender %></td>
        <td><%= treatment.description %></td>
    
      </tr>
    <% end %>
  </tbody>
</table>

<br>



</body>
</html>